<% include ../partials/header %>
<div class="form-wrap-main">

    
    <div id="border-top"></div>
    <div id="border-right"></div>
    <div id="border-btm"></div>
    <div id="border-left"></div>     
    <div class="show-container">
        <div class="form-wrap">
            <div>
                <h1>New Review: <%= park.name %></h1>
                
                    <form class="ratings" action="/parks/<%= park._id %>/reviews" method="POST">
                        <div>
                            <label for="rating"><strong>Leave a rating:</strong></label>
                            
                            <fieldset id="rating">
                                <div class="rating-line">
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
                                    <label for="first-rate5" title="5 stars - Amazing">
                                        <%- '<span class="fa fa-star checked new-rating"></span>'.repeat(5) %>
                                    </label>
                                </div>
                                <div class="rating-line">
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="4 stars - Very good">
                                        <%- '<span class="fa fa-star checked new-rating"></span>'.repeat(4) %>
                                    </label>
                                </div>
                                <div class="rating-line">
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="3 stars - Average">
                                        <%- '<span class="fa fa-star checked new-rating"></span>'.repeat(3) %>
                                    </label>
                                </div>
                                <div class="rating-line">
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="2 stars - Not good">
                                        <%- '<span class="fa fa-star checked new-rating"></span>'.repeat(2) %>
                                    </label>
                                </div>
                                <div class="rating-line">
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="1 star - Terrible">
                                        <%- '<span class="fa fa-star checked new-rating"></span>'.repeat(1) %>
                                    </label>
                                </div>     
                            </fieldset>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" type="text" name="review[text]" placeholder="Write a review for this park..." rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn-form">Submit a Review</button>
                        </div>
                    </form>
                    <a href="/parks/<%= park._id %>">Go Back</a>
                
            </div>
        </div>    
    </div>
</div>
<% include ../partials/footer %>